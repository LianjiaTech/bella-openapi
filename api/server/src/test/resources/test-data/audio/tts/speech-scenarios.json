  "speechRequests": [
    {
      "scenarioName": "火山TTS基础请求",
      "description": "使用火山引擎TTS进行语音合成的标准请求",
      "request": {
        "user": "1000000031454102",
        "model": "huoshan-tts",
        "input": "你好呀 这是一段测试语音",
        "stream": true,
        "sample_rate": 24000,
        "response_format": "pcm"
      },
      "expectedResponse": {
        "contentType": "audio/pcm",
        "dataLength": 1024
      },
      "mockChannel": {
        "channelInfo": "{\"apiKey\":\"test-key\",\"deployName\":\"huoshan-tts\"}",
        "protocol": "huoshan",
        "url": "https://openspeech.bytedance.com/api/v1/tts"
      },
      "parameterValidations": [
        {"field": "model", "expectedValue": "huoshan-tts"},
        {"field": "user", "expectedValue": "1000000031454102"},
        {"field": "stream", "expectedValue": true},
        {"field": "response_format", "expectedValue": "pcm"}
      ]
    },
